doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div#container
      nav
        ul
          li
            a(href="/") 
              div home
          li
            a(href="/books")
              div books
          if loggedIn
            li
              | Logged in as: #{userName}
            li
              a(href="/profile") Account Settings
          li.right
            form(action="/search")
              input( type="text" placeholder="Search.." name="search" )
              button(type="submit") search
      block content
